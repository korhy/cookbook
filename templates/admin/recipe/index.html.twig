{% extends '/admin/admin.html.twig' %}

{% block title %}Hello RecipeController!{% endblock %}

{% block body %}

<div>
    <h1>Recipes</h1>
    <p>
        <a class="btn btn-primary" href="{{ path('admin.recipe.create') }}">Add</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">{{ knp_pagination_sortable(recipes, 'Id', 'r.id') }}</th>
                <th scope="col">{{ knp_pagination_sortable(recipes, 'Title', 'r.title') }}</th>
                <th scope="col">{{ knp_pagination_sortable(recipes, 'Category', 'c.name') }}</th>
                <th style="width: 150px;" scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td><a href="{{ path('admin.recipe.show', {id: recipe.id, slug: recipe.slug}) }}">{{ recipe.title }}</a></td>
                <td>{{ recipe.category.name | default('') }}</td>
                <td>
                    <div class="d-flex gap-1">
                        <a class="btn btn-primary btn-sm" href="{{ path('admin.recipe.edit', {id: recipe.id}) }}">Edit</a>
                        <form action="{{ path('admin.recipe.remove', {id: recipe.id}) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

    {{ knp_pagination_render(recipes) }}
</div>
{% endblock %}
